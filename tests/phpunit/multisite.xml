<?xml version="1.0"?>
<phpunit
        bootstrap="../bootstrap.php"
        backupGlobals="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
>
    <php>
        <const name="WP_TESTS_MULTISITE" value="1" />
    </php>
    <testsuites>
        <testsuite name="smush-multisite">
            <directory prefix="test-" suffix=".php">../</directory>
            <exclude>../test-api.php</exclude>
        </testsuite>
    </testsuites>

    <groups>
        <exclude>
            <group>single</group>
        </exclude>
    </groups>
</phpunit>
